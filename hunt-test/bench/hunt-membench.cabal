name:          hunt-membench
version:       0.0.0.2
license:       MIT
-- license-file:  LICENSE
author:
copyright:
maintainer:
stability:     experimental
category:      Test, Benchmark
synopsis:      Memory benchmarks for the Hunt packages.
homepage:      http://github.com/hunt-framework
description:   Memory benchmarks for the Hunt packages.
cabal-version: >=1.8
build-type:    Simple

source-repository head
  type:        git
  location:    https://github.com/hunt-framework/hunt.git

executable hunt-membench
  main-is:        Index.hs
  hs-source-dirs: src
  other-modules:
  build-depends:   base                   >= 4.8  && < 5
                 , containers             >= 0.5
                 , aeson
                 , aeson-pretty
                 , binary                 >= 0.5  && < 1
                 , bytestring
                 , filepath
                 , hunt-searchengine      >= 0.1
                 , hunt-compression       >= 0.1
                 , process                >= 1    && < 2
                 , text
                 , time
                 , unix

  ghc-options:   -threaded
                 -Wall
                 -with-rtsopts=-T
                 -rtsopts
                 -fwarn-tabs
  extensions:

executable hunt-membench-bin
  main-is:        Binary.hs
  hs-source-dirs: src
  other-modules:
  build-depends:   base                   >= 4.8  && < 5
                 , containers             >= 0.5
                 , aeson
                 , aeson-pretty
                 , binary                 >= 0.5  && < 1
                 , bytestring
                 , hunt-searchengine      >= 0.1
                 , hunt-compression       >= 0.1
                 , process
                 , text
                 , time
                 , unix

  ghc-options:   -threaded
                 -Wall
                 -fwarn-tabs
  extensions:
